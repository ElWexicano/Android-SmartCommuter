<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/realtimeRowOdd" >

    <TextView
        android:id="@+id/expectedTimeTextView"
        style="@style/realtimeExpectedTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/expectedTimeExample" />

    <TextView
        android:id="@+id/destinationTextView"
        style="@style/realtimeDestination"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/expectedTimeTextView"
        android:text="@string/destinationExample" />

    <TextView
        android:id="@+id/routeLabelTextView"
        style="@style/realtimeRoute"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/locationTextView"
        android:text="@string/routeLbl" />

    <TextView
        android:id="@+id/routeTextView"
        style="@style/realtimeRoute"
        android:layout_alignRight="@+id/locationTextView"
        android:layout_below="@+id/locationTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/routeLabelTextView"
        android:text="@string/routeNameExample" />

</RelativeLayout>