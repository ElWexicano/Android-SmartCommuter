<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/appLayoutTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/arrivalsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/realtimeBanner"
        android:text="@string/arrivals" />

    <ListView
        android:id="@+id/arrivalsListView"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

	<LinearLayout 
	    android:id="@+id/arrivalsLoadingListView" 
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:orientation="vertical"
	    android:gravity="center" >
	
	    <ProgressBar
	        android:id="@+id/arrivalsLoadingProgressBar"
	        style="?android:attr/progressBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/arrivalsLoadingTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/appFontColor"
	        android:text="@string/realtime_loading_message" />
	
	</LinearLayout>
    
    <TextView
        android:id="@+id/departuresTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/realtimeBanner"
        android:text="@string/departures" />

    <ListView
        android:id="@+id/departuresListView"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

	<LinearLayout 
	    android:id="@+id/departuresLoadingListView" 
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:orientation="vertical"
	    android:gravity="center" >
	
	    <ProgressBar
	        android:id="@+id/departuresLoadingProgressBar"
	        style="?android:attr/progressBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/departuresLoadingTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/appFontColor"
	        android:text="@string/realtime_loading_message" />
	
	</LinearLayout>
    
</LinearLayout>